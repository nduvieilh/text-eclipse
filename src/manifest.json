{
  "name": "Text Eclipse",
  "description": "Apply custom styling to multiple sets of word matches across every page.",
  "version": "0.0.1",
  "manifest_version": 2,
  "options_page": "options.html",
  "background": {
    "scripts": [
      "background.js"
    ]
  },
  "options_ui": {
    "page": "options/options.html",
    "open_in_tab": true
  },
  "content_scripts": [
    {
      "matches": [
        "http://*/*",
        "https://*/*"
      ],
      "js": [
        "highlight.js"
      ],
      "run_at": "document_idle"
    }
  ],
  "icons": {
    "16": "icons/icon_16.png",
    "48": "icons/icon_48.png",
    "128": "icons/icon_128.png",
    "256": "icons/icon_256.png"
  },
  "permissions": [
    "storage",
    "history",
    "tabs",
    "http://*/*", 
    "https://*/*"
  ]
}